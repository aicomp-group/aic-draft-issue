{
  "prettier.printWidth": 160,
  "prettier.semi": false,
  "prettier.singleQuote": true, // Use single quotes instead of double quotes
  "prettier.bracketSpacing": true, // Print spaces between brackets in object literals
  "prettier.trailingComma": "es5", // enforce trailing commas
  "js/ts.implicitProjectConfig.checkJs": true,
  "eslint.validate": ["cds", "csn", "csv", "csv (semicolon)", "tab", "tsv"],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Commit messages should follow the Smart Commit syntax. For example: 'JIRA-123 #comment This is a commit message'."
    }
  ]
}
